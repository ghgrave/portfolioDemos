<%- include('partials/header.ejs', {title: 'Random Data File Maker'}) %>

<body>
<div class='container-fluid'>
    
    <h1 class="text-center">Random Data Generator</h1>
    <form action="/randomData" method="POST" id="form_container" class="row">
        <div class="col text-uppercase">
            <div class="card-columns"></div>


                <% for(attr in controls){%>
                    <div class="card col-lg-3 my-3 mx-5" >
                        <div class="card-body">
                            <h5 class="card-title text-center"><%= attr %></h5>
                            <% controls[attr].forEach(data => { %>
                                <div class="col">
                                    <input
                                        class=<%= data.class %>
                                        type=<%= data.type %> 
                                        name=<%= data.name %> 
                                        value=<%= data.value %> 
                                        id=<%= data.id %> 
                                    />
                                    <label 
                                        class=<%= data.classLabel %>  
                                        for=<%= data.for %>>
                                        <%= data.content %> 
                                    </label>
                                </div>
                                
                            <% }) %>
                        </div>
                    </div>
                <% } %>
            
            </div>
        </div>
        <div class="row text-center" >
            <div class="col my-3">
                <label for="howMany">Number of entries</label>
                <input type="number" id="howMany" name="qty" min="1" value="1" />
                <label for="fileName">Name of your file to create</label>
                <input type="text" name="fileName" id="fileName" />
                
                
            </div>
        </div> 
        <div class="row text-center">
            <div class="col-lg-12">
                <button class="btn btn-success text-uppercase mt-2" type="submit">
                    Submit
                </button>
                <button class="btn btn-danger text-uppercase mt-2" type="reset">
                    Reset
                </button>
            </div>
            
        </div>
    
    </form>

</div>



<%- include('partials/footer.ejs') %>