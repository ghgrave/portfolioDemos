<%- include('partials/header', {date})  %> 

  
      <h1>COVID-19 data by date</h1>
      <p>Total Cases: <%= totalCases %>  &nbsp; 
        Total Deaths: <%= totalDeaths %> &nbsp; 
        Death Rate: <%= ((totalDeaths/totalCases)*100).toFixed(2) %> </p>
    <% let header = Object.keys(data[0]) %>
    <table>
      <thead>
        <tr>
          <% header.forEach(el => { %>
          
            <th><%= el %></th>
          <% }) %>
        </tr>
      </thead>
      <tbody>
        <% for(let i = 1; i < data.length; i++){%>
        <tr>
          <% header.forEach(el => { %>
          <td><%= data[i][el] %></td>
          <% }) %>
        </tr>
        <% } %>
      </tbody>
    </table>

<%- include ('partials/footer') %> 